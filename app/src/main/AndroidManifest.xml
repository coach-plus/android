<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mathandoro.coachplus">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launch_icon"
        android:label="${appName}"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.PasswordResetActivity"
            android:label="@string/title_activity_password_reset"></activity>
        <activity
            android:name=".views.UserSettingsActivity"
            android:label="@string/title_activity_user_settings" />

        <receiver android:name=".helpers.NotificationActionReceiver" />

        <service android:name=".helpers.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".views.TeamView.TeamViewActivity"
            android:label="${appName}" />
        <activity android:name=".views.UserRegistrationActivity" />
        <activity android:name=".views.EmailVerificationActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="dev.coach.plus" />
                <data android:pathPattern="/app/verification/.*" />
            </intent-filter>
        </activity>
        <activity android:name=".views.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.EventList.EventListActivity"
            android:parentActivityName=".views.TeamView.TeamViewActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.TeamView.TeamViewActivity" />
        </activity>
        <activity android:name=".views.CreateEventActivity" />
        <activity android:name=".views.EventDetail.EventDetailActivity" />
        <activity android:name=".views.JoinTeamActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="dev.coach.plus" />
                <data android:pathPattern="/app/teams/.*/join/.*" />
            </intent-filter>
        </activity>
        <activity android:name=".views.TeamRegistrationActivity" />
        <activity android:name=".views.WebViewActivity" />
        <activity android:name=".views.UserProfile.UserProfileActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>