<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_picker_user_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle" />


    <ImageView
        android:id="@+id/image_picker_edit_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="52dp"
        android:tint="#ffffff"
        app:layout_constraintStart_toStartOf="@+id/image_picker_user_image"
        app:layout_constraintTop_toTopOf="@+id/image_picker_user_image"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/image_picker_edit_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/image_picker_edit_profile_picture"
        app:layout_constraintEnd_toEndOf="@+id/image_picker_edit_profile_picture"
        app:layout_constraintStart_toStartOf="@+id/image_picker_edit_profile_picture"
        app:layout_constraintTop_toTopOf="@+id/image_picker_edit_profile_picture"
        app:srcCompat="@drawable/ic_mode_edit_white_48dp" />

</android.support.constraint.ConstraintLayout>