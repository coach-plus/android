<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/headingBackground">

    <TextView
        android:id="@+id/team_feed_upcoming_events_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:text="Upcoming Events"
        android:textColor="#211d1d"
        android:textSize="18sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <Button
        android:id="@+id/team_feed_upcoming_events_header_see_all_events_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:minHeight="0dp"
        android:padding="10dp"
        android:text="see all events >"

        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/team_feed_upcoming_events_header_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/team_feed_upcoming_events_header_title" />


</androidx.constraintlayout.widget.ConstraintLayout>


