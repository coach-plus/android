<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.mathandoro.coachplus.views.UserProfile.UserProfileActivity">


    <ImageView
        android:id="@+id/user_profile_user_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle" />

    <TextView
        android:id="@+id/user_profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="firstname lastname"
        android:textColor="#4a4a4a"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_profile_user_image" />

    <TextView
        android:id="@+id/user_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="user@email.de"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_profile_username" />

    <ImageView
        android:id="@+id/user_profile_edit_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="52dp"
        android:tint="#ffffff"
        app:layout_constraintStart_toStartOf="@+id/user_profile_user_image"
        app:layout_constraintTop_toTopOf="@+id/user_profile_user_image"
        app:srcCompat="@drawable/circle" />

    <ImageView
        android:id="@+id/user_profile_edit_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:tint="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/user_profile_edit_profile_picture"
        app:layout_constraintEnd_toEndOf="@+id/user_profile_edit_profile_picture"
        app:layout_constraintStart_toStartOf="@+id/user_profile_edit_profile_picture"
        app:layout_constraintTop_toTopOf="@+id/user_profile_edit_profile_picture"
        app:srcCompat="@drawable/ic_mode_edit_white_48dp" />

</android.support.constraint.ConstraintLayout>